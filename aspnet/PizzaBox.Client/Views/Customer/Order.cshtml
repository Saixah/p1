@model PizzaBox.Client.Models.StoreViewModel;

<header>Choose a Store</header>
@Html.ValidationMessageFor(m => m.StoreName,"", new { @class = "text-danger" })
@using (@Html.BeginForm("SelectStore", "Customer", new { id = @Model.Username } ,FormMethod.Post))
{
  @Html.AntiForgeryToken()
  @foreach (var item in Model.Stores)
  {
    @Html.RadioButtonFor(m => m.StoreName, item.Name)
    @Html.LabelFor(m => m.StoreName, item.Name)
  }
  <input type="submit" class="btn btn-default" value="Choose Store" />
}
