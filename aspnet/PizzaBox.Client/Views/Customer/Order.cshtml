@model PizzaBox.Client.Models.OrderViewModel;

<header>Choose a Store</header>
@using (@Html.BeginForm("RedirectToPizza", "Customer", FormMethod.Post))
{
  @Html.AntiForgeryToken()
  @foreach (var item in Model.Stores)
  {
    @Html.RadioButtonFor(m => m.StoreName, item.Name)
    @Html.LabelFor(m => m.StoreName, item.Name)
  }
  <input type="submit" name = "Storename" class="btn btn-default" value="Choose Store" />
}
