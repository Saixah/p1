@model PizzaBox.Client.Models.CustomerViewModel;
<style>

ol {
    list-style: none;
    -moz-column-count: 4;
    -moz-column-gap: 20px;
    -webkit-column-count: 4;
    -webkit-column-gap: 20px;
    column-count: 4;
    column-gap: 20px;
}

</style>
<header>Choose a User</header>
 @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
@using (@Html.BeginForm("ExistingUser", "Customer", FormMethod.Post))
{
  @Html.AntiForgeryToken()
  <ol>
  @Html.ValidationSummary(true, "", new { @class = "text-danger" })
  @foreach (var item in Model.Users)
  {
    <li>@Html.RadioButtonFor(m => m.Username, item.Name)
    @Html.LabelFor(m => m.Username, item.Name)</li>
  }
  </ol>
  <input type="submit" value="Choose User" style="float: left;"/>
}

@using (Html.BeginForm("NewUser","Customer", FormMethod.Post))
  {
    <div style="float: right;">
        @Html.TextBoxFor(m=>m.Username)
        <input type="submit" name="Username" value="Create New User" />
    </div>
  }
